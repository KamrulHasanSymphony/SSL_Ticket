@model SSL.Sample.SSL.Sample.Models.PurchaseHeaderVM

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div id="validation-summary" style="margin-top:.5%;">
            </div>
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Basic</h3>
                </div>
                <form id="purchaseForm" class="k-form">
                    <div class="card-body">
                        <div class="form-group">
                            <input type="hidden" id="hdnPurchaseHeaderId" />
                            <input type="hidden" id="hdnPurchaseDetailId" />
                            <div class="row">
                                <div class="col-lg-2 col-md-2 col-sm-2">
                                    <div class="row">
                                        <div class="kLabel4">
                                            @Html.LabelFor(model => model.Code)
                                        </div>
                                        <div class="kInput8 ">
                                            <span class="k-form-field-wrap">
                                                <input type="text" id="Code" name="Code" class="kTextbox required" required validationMessage="Enter {0}" />                                                
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-3 col-sm-3 col-lg-3">
                                    <!-- general form elements -->
                                    <div class="row">
                                        <div class="kLabel4">
                                            @Html.LabelFor(model => model.AVendorId)
                                        </div>
                                        <div class="kInput8">
                                            @* @Html.TextBoxFor(model => model.AVendorId, new { @class = "KDropDown required", data_Url="/Purchase/GetVendor"}) *@
                                            <input type="text" class="KDropDown required" id="AVendorId" name="Vendor" required validationMessage="Enter {0}" />
                                        </div>

                                    </div>
                                </div>
                                <div class="col-md-1 col-lg-1 col-sm-1">
                                    <button title="Add New Vendor" id="btnVendor" class="btn btn-primary btnAdd" style="height:50px;background-color:#17a2b8;border-color:#17a2b8"><i class="fa fa-plus-circle" aria-hidden="true"></i></button>
                                </div>
                                <div class="col-md-1 col-lg-1 col-sm-1">
                                    <button title="Search Vendor" id="btnSrcVendor" class="btn btn-primary" style="height:50px;background-color:#17a2b8;border-color:#17a2b8"><i class="fa fa-search" aria-hidden="true"></i></button>
                                </div>
                                <div class="col-lg-2 col-md-2 col-sm-2">
                                    <div class="row">
                                        <div class="col-md-5 col-lg-5 col-sm-5">
                                            @Html.LabelFor(model => model.VendorAddress)
                                        </div>
                                        <div class="col-md-7 col-sm-7 col-lg-7">
                                            @Html.TextBoxFor(m => m.VendorAddress, new { @class = "kTextbox",disabled="disabled",@placeholder="Address" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-3 col-lg-3">
                                    <div class="row">
                                        <div class="col-md-4 col-sm-4 col-lg-4">
                                            @Html.LabelFor(model => model.TransactionDate)
                                        </div>
                                        <div class="kInput8">
                                            <input id="TransactionDate" placeholder="day.month.year hours:minutes" class="kDtPicker required" name="Transaction Date" required validationMessage="Enter {0}" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="sapcer4"></div>
                            <div class="row">
                                <div class="col-md-4 col-sm-4 col-lg-4">
                                    <div class="kLabel4">
                                        @Html.LabelFor(model => model.SubTotal)
                                    </div>
                                    <div class="kInput8">
                                        @Html.TextBoxFor(m => m.SubTotal, new { @class = "KNumericTextBox",disabled="disabled" })
                                    </div>
                                </div>
                                <div class="col-md-4 col-sm-4 col-lg-4">
                                    <div class="kLabel4">
                                        @Html.LabelFor(model => model.SubtotalVAT)
                                    </div>
                                    <div class="kInput8">
                                        @Html.TextBoxFor(m => m.SubtotalVAT, new { @class = "KNumericTextBox",id="SubtotalVAT",disabled="disabled" })
                                    </div>
                                </div>
                                <div class="col-md-4 col-sm-4 col-lg-4">
                                    <div class="kLabel4">
                                        @Html.LabelFor(model => model.Total)
                                    </div>
                                    <div class="kInput8">
                                        @Html.TextBoxFor(m => m.Total, new { @class = "KNumericTextBox",disabled="disabled" })
                                    </div>
                                </div>

                                @*<div class="col-md-3" id="example">
                                    <div class="demo-section wide">
                                        <div>
                                            @Html.LabelFor(model => model.Remarks)
                                            <textarea id="editor" rows="10" cols="30" style="width:100%; height:840px" aria-label="editor"></textarea>
                                            @* <textarea id="Remarks"
                                                      data-role="editor"
                                                      data-tools="['bold','italic','underline', 'strikethrough','justifyLeft','justifyCenter','justifyRight','justifyFull']"
                                                      data-bind="visible: isVisible,value: html,events: { change: onChange }">
                                            </textarea> 
                                        </div>
                                    </div>
                                </div>*@
                            </div>
                            <div class="sapcer4"></div>
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12" id="example">
                                    <div class="demo-section wide">
                                        <div>
                                            @Html.LabelFor(model => model.Remarks)
                                            <textarea id="editor" rows="10" cols="30" style="width:100%; height:840px" aria-label="editor"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </form>
            </div>
            <div class="card card-primary clsProduct">
                <div class="card-header">
                    <h3 class="card-title">Product</h3>
                </div>
                <div id="detailsGrid"></div>
            </div>
        </div>
    </div>
</div>
