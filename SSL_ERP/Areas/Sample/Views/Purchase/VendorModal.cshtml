<div class="container-fluid">
    <div class="row">        
        <div class="col-md-12 col-lg-12 col-sm-12">
            <div class="card card-primary" style="width:97%;">
                <form id="vendorForm" class="k-form">
                    <div class="card-body">
                        <div class="form-group">
                            <input type="hidden" id="hdnVendorId" value="0" />
                            <input type="hidden" id="hdnBranchId" value="0" />
                            <label for="txtVendorCode">Code</label>
                            <input type="text" name="Code" required class="form-control clsName required" id="txtVendorCode" placeholder="Code" />
                        </div>
                        <div class="form-group">
                            <label for="txtVendorName">Name</label>
                            <input type="text" name="Name" class="form-control clsType required" required id="txtVendorName" placeholder="Name" />
                        </div>
                        <div class="form-group">
                            <label for="txtVendorAddress">Address</label>
                            <textarea class="form-control clsDescription" id="txtVendorAddress" placeholder="Address"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="txtEmailAddress">Email</label>
                            <input type="email" class="kTextbox clsEmail" id="txtEmailAddress" name="email" placeholder="e.g. myname@example.net" required data-email-msg="Email format is not valid" />
                        </div>
                        <div class="form-group">
                            <div class="form-group">
                                <label for="BINCertificate">BIN Certificate</label>
                                <input type="file" id="BINCertificate" name="file" onchange="uploadFile()">
                                <br>
                                <span id="message"></span>
                            </div>                            
                        </div>
                    </div>
                    <div class="card-body">
                        <button title="Add Vendor" id="btnSaveVendor" class="btn btn-success"><i class="fa fa-upload" aria-hidden="true"></i>&nbsp;Save</button>
                        <button type="button" id="cancelButton" class="btn btn-danger"><i class="fa fa-times" aria-hidden="true"></i>&nbsp;Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
