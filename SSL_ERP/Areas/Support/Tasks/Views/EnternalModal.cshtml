
<div class="container-fluid">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12 col-sm-12 col-lg-12">
            <div id="validation-summary" style="margin-top:.5%;">
            </div>
            <!-- general form elements -->
            <div class="card card-primary" style="width:97%;">
                <form id="enternalForm" class="k-form">
                    <div class="card-body">
                        <div class="form-group">
                            <input type="hidden" id="hdnEnternalNId" value="0" />
                            <label for="txtShortNote">Short Note</label>
                            <input id="txtShortNote" class="kTextbox" placeholder="Short Note" validationmessage="*" />
                        </div>
                        <div class="form-group">
                            <label for="Description">Description</label>
                            <textarea id="editorShortNote" rows="10" cols="30" style="width:100%; height:840px" aria-label="editor"></textarea>
                        </div>
                    </div>
                    <div class="card-body">
                        <button title="Add Enternal Notes" id="btnSaveEnternal" class="btn btn-success"><i class="fa fa-upload" aria-hidden="true"></i>&nbsp;Save</button>
                        <button title="Is Active" id="btnEntIsAct" class="btn btn-success" style="display:none"><i class="fa fa-upload" aria-hidden="true"></i>&nbsp;InActive</button>
                        <button type="button" id="cancelEntButton" class="btn btn-danger"><i class="fa fa-times" aria-hidden="true"></i>&nbsp;Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
