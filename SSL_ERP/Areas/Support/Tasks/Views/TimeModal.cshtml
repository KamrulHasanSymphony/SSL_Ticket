
<div class="container-fluid">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12 col-sm-12 col-lg-12">
            <div id="validation-summary" style="margin-top:.5%;">
            </div>
            <!-- general form elements -->
            <div class="card card-primary" style="width:97%;">
                <form id="timeForm" class="k-form">
                    <div class="card-body">
                        <div class="form-group">
                            <input type="hidden" id="hdnTimeId" value="0" />
                            <label for="Description">Comments</label>
                            <textarea id="timeEditor" rows="10" cols="30" style="width:100%; height:840px" aria-label="editor"></textarea>
                        </div>
                    </div>
                    <div class="card-body">
                        <button title="Pause" id="btnPause" class="btn btn-sm mr-2 edit" style="background-color: royalblue;color:white;display:none;"><i class='fas fa-pause-circle'></i>&nbsp;Pause</button>
                        <button title="Start" id="btnTimeStart" class="btn btn-sm mr-2" style="background-color: darkgreen;color:white;display:none;"><i class='fa fa-check-circle'></i>&nbsp;Complete</button>
                        <button title="Start" id="btnHold" class="btn btn-sm mr-2" style="background-color: orange;color:white;display:none;"><i class='fas fa-pause-circle'></i>&nbsp;Hold</button>
                        <button type="button" id="cancelTimeButton" class="btn btn-danger"><i class="fa fa-times" aria-hidden="true"></i>&nbsp;Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
