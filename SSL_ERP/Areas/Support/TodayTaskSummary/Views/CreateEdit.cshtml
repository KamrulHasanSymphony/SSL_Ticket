                                            </div>
                                            <div class="col-md-8">
                                                @Html.LabelFor(model => model.Details, new { @class = "" })
                                                @Html.TextAreaFor(model => model.Details, new
                                                    {
                                                        placeholder = "Enter Notes",
                                                        @class = "form-control form-control-sm",
                                                        rows = "4",
                                                        @id = "idDetails"
                                                    })
                                                @Html.ValidationMessageFor(model => model.Details)
                                            </div>
                                        </div>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </form> *@
                </div>
            </div>
        </div>
    }

</div>


@section scripts {
    <script src="~/javascript/todaytasksummary/todaytasksummary.js"></script>
    <script src="~/js/app/services/commonservice.js"></script>
    <script src="~/js/app/services/todaytasksummary/todaytasksummaryservice.js"></script>
    <script src="~/js/app/controllers/support/todaytasksummarycontroller.js"></script>

