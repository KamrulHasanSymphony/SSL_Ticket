@{
    ViewData["Title"] = "Excell Upload";
    Layout = "_Layout";
}

<!-- Font Awesome 5 (free) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">


<div class="container-fluid">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title"><i class="nav-icon fas fa-file-excel"></i> Excel Upload</h3>
        </div>

        <div class="card-body">
            <div class="text-center">
                <!-- Hidden file input -->
                <input type="file" id="excelFile" accept=".xls,.xlsx" style="display:none;" />

                <!-- Upload button -->
                <button id="btnExcelUpload" class="btn btn-success">
                    <i class="nav-icon fas fa-file-excel"></i> Choose Excel File
                </button>

                <!-- Selected file name display -->
                <p id="selectedFileName" class="mt-3 text-muted"></p>

                <!-- Upload submit button -->
                <button id="btnUploadSubmit" class="btn btn-primary mt-2" disabled>
                    <i class="fas fa-upload"></i> Upload
                </button>
            </div>
        </div>
    </div>
</div>

<script src="~/javascript/excellupload/excellupload.js"></script>




